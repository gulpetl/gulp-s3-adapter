{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2021",
        "module":"commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom", "ES2021"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/js",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}
