{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "esModuleInterop": false, // https://evertpot.com/universal-commonjs-esm-typescript-packages/
        "target": "ES2022",
        "module":"ES2022",
        "strict": true,
        // "sourceMap": true,
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }